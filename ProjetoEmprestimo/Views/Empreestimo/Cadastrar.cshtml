@model EmpreestimoModel
@{
    ViewData["Title"] = "Cadastrar Emprestimo";
}
<div class="conttainer bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Emprestimo</h1>
    </div>
<form method="post" asp-action="Empreestimo" asp-action="Cadastrar">

<div class="mb-3 text-light">
    <label for="exampleFormControlInput1" class="form-label">Recebedor:</label>
    <input type="text" asp-for="Recebedor" class="form-control" id="Recebedor" placeholder="Quem está recebendo o Livro?">
            <span class="text-danger" asp-validation-for="Recebedor"></span>
</div>

        <div class="mb-3 text-light">
            <label for="exampleFormControlInput1" class="form-label">Fornecedor</label>
            <input type="text" asp-for="Fornecedor" class="form-control" id="Fornecedor" placeholder="Quem esta emprestando">
            <span class="text-danger"  asp-validation-for="Fornecedor"></span>
        </div>


        <div class="mb-3 text-light">
    <label for="exampleFormControlTextarea1" class="form-label">Livro</label>
            <textarea type="text" asp-for="LivroEmprestado" class="form-control" id="Livro" placeholder="Qual é o Livro que esta sendo emprestado?"></textarea>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>

</div>

<div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-primary w-50 " asp-controller="Empreestimo" asp-action="Cadastrar">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Empreestimo" asp-action="index">Voltar</a>
</div>
</form></div>